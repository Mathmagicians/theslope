generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["strictUndefinedChecks"]
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum SystemRole {
  ADMIN
  ALLERGYMANAGER
}

enum Role {
  CHEF
  COOK
  JUNIORHELPER
}

enum TicketType {
  ADULT
  CHILD
  BABY
}

enum DinnerMode {
  TAKEAWAY
  DINEIN
  DINEINLATE
  NONE
}

enum DinnerState {
  SCHEDULED
  ANNOUNCED
  CANCELLED // used if the dinner is cancelled, and orders should be refunded
  CONSUMED
}

enum OrderState {
  BOOKED
  RELEASED
  CANCELLED // permitted if parent dinner is cancelled
  CLOSED
}

enum OrderAuditAction {
  USER_BOOKED // User manually booked
  USER_CANCELLED // User cancelled their booking (respected in scaffolding)
  USER_CLAIMED // User claimed released ticket from another household
  SYSTEM_CREATED // System/admin created (scaffolder, bulk import, admin action)
  SYSTEM_DELETED // System/admin deleted (may be re-created by scaffolder)
}

enum JobType {
  DAILY_MAINTENANCE
  MONTHLY_BILLING
  HEYNABO_IMPORT
  MAINTENANCE_IMPORT
  MAINTENANCE_EXPORT
}

enum JobStatus {
  RUNNING
  SUCCESS
  PARTIAL
  FAILED
}

model AllergyType {
  id                   Int                   @id @default(autoincrement())
  name                 String
  description          String
  icon                 String?
  Allergy              Allergy[]
  DinnerEventAllergens DinnerEventAllergen[]
}

model DinnerEventAllergen {
  id            Int         @id @default(autoincrement())
  dinnerEventId Int
  dinnerEvent   DinnerEvent @relation(fields: [dinnerEventId], references: [id], onDelete: Cascade)
  allergyTypeId Int
  allergyType   AllergyType @relation(fields: [allergyTypeId], references: [id], onDelete: Cascade)

  @@unique([dinnerEventId, allergyTypeId])
  @@index([allergyTypeId])
}

model Allergy {
  id                Int         @id @default(autoincrement())
  inhabitantId      Int
  inhabitant        Inhabitant  @relation(fields: [inhabitantId], references: [id], onDelete: Cascade)
  inhabitantComment String?
  allergyTypeId     Int
  allergyType       AllergyType @relation(fields: [allergyTypeId], references: [id], onDelete: Cascade)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@unique([inhabitantId, allergyTypeId])
  @@index([inhabitantId])
}

// Represents the login and contact credentials of a Heynabo standalone user, together with system roles
model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  phone        String?
  passwordHash String
  systemRoles  String         @default("[]") // JSON stringified array of SystemRole
  Inhabitant   Inhabitant?
  bookedOrders Order[]        @relation("BookedByUser")
  orderHistory OrderHistory[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

// Represents a member of a household, that can participate in the dinners and cooking
// Inhabitant 1-0..1 User
// Inhabitant *-1 Household
// Inhabitant - 0..* Allergy
// User - 0..* Role

model Inhabitant {
  id                    Int                     @id @default(autoincrement())
  heynaboId             Int                     @unique // reference to Heynabo user
  user                  User?                   @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId                Int?                    @unique // foreign key to User
  householdId           Int
  household             Household               @relation(fields: [householdId], references: [id], onDelete: Cascade)
  pictureUrl            String?
  name                  String
  lastName              String
  birthDate             DateTime?
  allergies             Allergy[]
  dinnerPreferences     String? // JSON stringified map of Weekday to DINNERMODE
  DinnerEvent           DinnerEvent[]
  Order                 Order[]
  CookingTeamAssignment CookingTeamAssignment[]

  @@index([householdId])
  @@index([userId]) // For user lookups
}

model Household {
  id          Int          @id @default(autoincrement())
  heynaboId   Int          @unique
  pbsId       Int          @unique
  movedInDate DateTime
  moveOutDate DateTime?
  name        String
  address     String
  inhabitants Inhabitant[]
  Invoice     Invoice[]
}

model DinnerEvent {
  id              Int                   @id @default(autoincrement())
  date            DateTime
  menuTitle       String
  menuDescription String?
  menuPictureUrl  String?
  state           DinnerState           @default(SCHEDULED)
  totalCost       Int                   @default(0) // Price in DKK øre, total grocery costs
  heynaboEventId  Int?                  @unique
  chefId          Int?
  chef            Inhabitant?           @relation(fields: [chefId], references: [id], onDelete: SetNull)
  cookingTeamId   Int?
  cookingTeam     CookingTeam?          @relation(fields: [cookingTeamId], references: [id], onDelete: SetNull)
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  tickets         Order[]
  Season          Season?               @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  seasonId        Int?
  allergens       DinnerEventAllergen[] // Many-to-many with AllergyType via join table

  @@index([seasonId])
  @@index([chefId])
  @@index([date]) // For chronological queries
  @@index([state]) // For filtering by state
}

model Order {
  id             Int            @id @default(autoincrement())
  dinnerEventId  Int
  dinnerEvent    DinnerEvent    @relation(fields: [dinnerEventId], references: [id], onDelete: Cascade)
  inhabitantId   Int
  inhabitant     Inhabitant     @relation(fields: [inhabitantId], references: [id], onDelete: Cascade)
  bookedByUserId Int?
  bookedByUser   User?          @relation("BookedByUser", fields: [bookedByUserId], references: [id], onDelete: SetNull)
  ticketPriceId  Int?
  ticketPrice    TicketPrice?   @relation(fields: [ticketPriceId], references: [id], onDelete: SetNull)
  priceAtBooking Int
  dinnerMode     DinnerMode     @default(DINEIN)
  state          OrderState     @default(BOOKED)
  isGuestTicket  Boolean        @default(false) // True when ticket is for a guest (not the inhabitant themselves)
  releasedAt     DateTime? // when the order was released back to availability, first released is first in line for booking by other users
  closedAt       DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  Transaction    Transaction?
  orderHistory   OrderHistory[]

  @@index([bookedByUserId])
  @@index([inhabitantId])
  @@index([dinnerEventId, state]) // Composite for "orders by dinner and state"
}

model Transaction {
  id              Int      @id @default(autoincrement())
  orderId         Int?     @unique
  order           Order?   @relation(fields: [orderId], references: [id], onDelete: SetNull)
  orderSnapshot   String // JSON stringified snapshot of the order at the time of transaction
  userSnapshot    String // JSON stringified snapshot of the user at the time of transaction
  amount          Int // price in DKK øre
  userEmailHandle String
  createdAt       DateTime @default(now())
  invoiceId       Int? // Many transactions per invoice (1 invoice aggregates all household orders in billing period)
  invoice         Invoice? @relation(fields: [invoiceId], references: [id], onDelete: SetNull)

  @@index([orderId])
  @@index([invoiceId])
}

model Invoice {
  id                     Int                   @id @default(autoincrement())
  transactions           Transaction[]
  cutoffDate             DateTime
  paymentDate            DateTime
  billingPeriod          String // formatDateRange format: "dd/MM/yyyy-dd/MM/yyyy"
  amount                 Int
  createdAt              DateTime              @default(now())
  householdId            Int?
  houseHold              Household?            @relation(fields: [householdId], references: [id], onDelete: SetNull)
  billingPeriodSummaryId Int?
  billingPeriodSummary   BillingPeriodSummary? @relation(fields: [billingPeriodSummaryId], references: [id], onDelete: SetNull)

  // Frozen billing identity (immutable after creation - for PBS export)
  pbsId   Int // PBS customer number at billing time
  address String // Billing address at billing time

  @@index([householdId])
  @@index([billingPeriod])
  @@index([billingPeriodSummaryId])
}

// Community-wide billing period summary with magic link for accountant
model BillingPeriodSummary {
  id             Int       @id @default(autoincrement())
  billingPeriod  String    @unique // formatDateRange format: "dd/MM/yyyy-dd/MM/yyyy"
  shareToken     String    @unique // UUID for magic link access
  totalAmount    Int // Sum in øre
  householdCount Int
  ticketCount    Int
  cutoffDate     DateTime // 17th when billing period closes
  paymentDate    DateTime // 1st of collection month
  invoices       Invoice[]
  createdAt      DateTime  @default(now())
}

// Cooking teams are seasonal, and created by the system administrator
model CookingTeam {
  id          Int                     @id @default(autoincrement())
  seasonId    Int
  season      Season                  @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  name        String
  dinners     DinnerEvent[]
  assignments CookingTeamAssignment[]
  affinity    String? // JSON stringified map of Weekday to boolean
}

model CookingTeamAssignment {
  id                   Int         @id @default(autoincrement())
  cookingTeamId        Int
  cookingTeam          CookingTeam @relation(fields: [cookingTeamId], references: [id], onDelete: Cascade)
  inhabitantId         Int
  inhabitant           Inhabitant  @relation(fields: [inhabitantId], references: [id], onDelete: Cascade)
  role                 Role
  allocationPercentage Int         @default(100)
  affinity             String? // JSON stringified map of Weekday to boolean
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt

  @@index([cookingTeamId])
  @@index([inhabitantId])
}

model Season {
  id                                Int           @id @default(autoincrement())
  shortName                         String?       @unique
  seasonDates                       String // JSON stringified DateRange object
  isActive                          Boolean
  CookingTeams                      CookingTeam[]
  cookingDays                       String // JSON stringified map of Weekday to boolean
  holidays                          String // JSON stringified array of DateRange
  ticketPrices                      TicketPrice[]
  dinnerEvents                      DinnerEvent[]
  ticketIsCancellableDaysBefore     Int
  diningModeIsEditableMinutesBefore Int
  consecutiveCookingDays            Int           @default(1)
}

model TicketPrice {
  id              Int        @id @default(autoincrement())
  seasonId        Int
  season          Season     @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  ticketType      TicketType
  price           Int
  description     String?
  maximumAgeLimit Int?
  orders          Order[]
}

model OrderHistory {
  id                Int              @id @default(autoincrement())
  orderId           Int?
  order             Order?           @relation(fields: [orderId], references: [id], onDelete: SetNull)
  action            OrderAuditAction
  performedByUserId Int?
  performedByUser   User?            @relation(fields: [performedByUserId], references: [id], onDelete: SetNull)
  auditData         String
  timestamp         DateTime         @default(now())

  // Denormalized for cancellation queries (orderId becomes NULL after deletion)
  inhabitantId  Int?
  dinnerEventId Int?
  seasonId      Int?

  @@index([orderId])
  @@index([performedByUserId])
  @@index([timestamp])
  @@index([seasonId, inhabitantId, dinnerEventId, action]) // For cancellation lookups by season
}

model JobRun {
  id            Int       @id @default(autoincrement())
  jobType       JobType
  status        JobStatus
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  durationMs    Int?
  resultSummary String? // JSON - flexible per job type
  errorMessage  String?
  triggeredBy   String    @default("CRON") // "CRON" | "ADMIN:<userId>"

  @@index([jobType, startedAt])
}
