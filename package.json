{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "npm run build && wrangler dev",
    "postinstall": "nuxt prepare",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "test": "npx vitest --run",
    "test:e2e": "npx playwright test --reporter=html,line",
    "db:seed:local": "npx wrangler d1 execute theslope --file migrations/seed.sql --local",
    "db:migrate:local": "npx wrangler d1 migrations apply theslope --local",
    "db:migrate": "npx wrangler d1 migrations apply theslope --remote",
    "db:generate-client": "npx prisma generate"
  },
  "dependencies": {
    "@nuxt/ui": "^2.20.0",
    "@nuxt/vite-builder": ">=3.15.3",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@pinia/nuxt": "^0.9.0",
    "@prisma/adapter-d1": "^6.2.1",
    "@prisma/client": "^6.3.1",
    "@vueuse/core": "^12.4.0",
    "date-fns": "^4.1.0",
    "ical-generator": "^8.1.1",
    "nuxt": "^3.15.0",
    "nuxt-auth-utils": "^0.5.10",
    "pinia": "^2.3.1",
    "vue": "latest",
    "vue-router": "latest",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@iconify-json/material-symbols": "^1.2.14",
    "@iconify-json/pajamas": "^1.2.5",
    "@nuxt/eslint": "^0.7.5",
    "@nuxt/test-utils": "^3.15.4",
    "@nuxt/vite-builder": ">=3.15.3",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.18.0",
    "happy-dom": "^16.8.1",
    "nitro-cloudflare-dev": "^0.2.1",
    "nitro-test-utils": "^0.9.1",
    "nitropack": "^2.10.4",
    "playwright": "^1.49.1",
    "prisma": "^6.3.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "wrangler": "^3.99.0",
    "zod-prisma-types": "^3.2.4"
  }
}
