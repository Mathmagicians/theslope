{
  "name": "theslope",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "engines": {
    "npm": ">=10.9.0 <11.0.0",
    "node": ">=22.0.0 <23.0.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "deploy": "npm run build && wrangler deploy --env dev",
    "deploy:prod": "npm run build && wrangler deploy --env prod",
    "cf-typegen": "wrangler types",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "ts": "npx vue-tsc --noEmit  ",
    "pre:all": "npm run lint && npm run ts",
    "test:unit": "npx vitest --run",
    "test:e2e": "npx playwright test --reporter=html,line",
    "test:e2e:api": "npx playwright test tests/e2e/api --reporter=html,line",
    "test:e2e:ui": "npx playwright test tests/e2e/ui --reporter=html,line",
    "test:e2e:smoke": "npx playwright test --grep @smoke --reporter=html,line",
    "test:all": "npm run test:unit && npm run test:e2e:api && npm run test:e2e:ui",
    "db:seed:local": "npx wrangler d1 execute theslope --file migrations/seed/seed.sql --local",
    "db:seed": "npx wrangler d1 execute theslope --file migrations/seed/seed.sql --env=dev --remote",
    "db_prod:seed:local": "npx wrangler d1 execute theslope-prod --file migrations/seed/seed.sql --env=prod --local",
    "db_prod:seed": "npx wrangler d1 execute theslope-prod --file migrations/seed/seed.sql --env=prod --remote",
    "db:migrate:local": "npx wrangler d1 migrations apply theslope --local",
    "db:migrate": "npx wrangler d1 migrations apply theslope --remote --env=dev",
    "db_prod:migrate:local": "npx wrangler d1 migrations apply theslope-prod --env=prod  --local",
    "db_prod:migrate": "npx wrangler d1 migrations apply theslope-prod --env=prod --remote",
    "db:generate-client": "npx prisma generate"
  },
  "dependencies": {
    "@nuxt/ui": "^4.0.0",
    "@nuxt/vite-builder": "^4.1.2",
    "@pinia/nuxt": "^0.11.2",
    "@prisma/adapter-d1": "^6.16.2",
    "@prisma/client": "^6.16.2",
    "@vueuse/core": "^13.9.0",
    "date-fns": "^4.1.0",
    "ical-generator": "^8.1.1",
    "nuxt": "^4.1.2",
    "nuxt-auth-utils": "^0.5.25",
    "pinia": "^3.0.3",
    "tailwindcss": "^4.1.13",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251001.0",
    "@iconify-json/fluent-emoji-high-contrast": "^1.2.5",
    "@iconify-json/fluent-mdl2": "^1.2.1",
    "@iconify-json/guidance": "^1.2.2",
    "@iconify-json/healthicons": "^1.2.12",
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/hugeicons": "^1.2.18",
    "@iconify-json/lucide": "^1.2.69",
    "@iconify-json/mage": "^1.2.4",
    "@iconify-json/material-symbols": "^1.2.14",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/pajamas": "^1.2.5",
    "@iconify-json/streamline": "^1.2.5",
    "@iconify-json/tdesign": "^1.2.10",
    "@nuxt/eslint": "^0.7.5",
    "@nuxt/test-utils": "^3.20.1",
    "@nuxt/vite-builder": "^4.1.2",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.1",
    "@vue/test-utils": "^2.4.6",
    "baseline-browser-mapping": "^2.9.0",
    "eslint": "^9.36.0",
    "happy-dom": "^16.8.1",
    "nitro-cloudflare-dev": "^0.2.1",
    "nitro-test-utils": "^0.9.1",
    "nitropack": "^2.10.4",
    "playwright": "^1.55.1",
    "prisma": "^6.16.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "vue-tsc": "^3.1.7",
    "wrangler": "^4.42.1",
    "zod-prisma-types": "^3.2.4"
  }
}
